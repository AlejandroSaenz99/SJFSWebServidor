<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/updateDiesel/<%=data1.Id%>" method="post">
                        <div class=" form-group">
                            <input type="text" id="Username" name="username" placeholder="" value="<%=data1.username;%>" hidden><br><br>
                            <label for="Semana">Week:</label><br>
                            <input type="number" id="Week" name="week" placeholder="Week" value="<%=data1.week%>" required><br><br>
                            <label for="Invoice">Invoice:</label><br>
                            <input type="text" id="Invoice" name="Invoice" placeholder="Invoice" value="<%=data1.Invoice%>" required><br><br>
                            <label for="Fecha">Date:</label><br>
                            <%let fechaMoment=(moment(data1.date)); const dformat='YYYY-MM-DD' ; let
                            fechamiformato=fechaMoment.format(dformat); console.log(fechamiformato);%>
                            <input type="text" id="Fecha" name="date" placeholder="'YYYY-MM-DD'"
                                value="<%=fechamiformato%>" required><br><br>
                            <label for="Tienda">Store:</label><br>
                            <input type="text" id="Store" name="Store" placeholder="Store" value="<%=data1.Store;%>" required><br><br>
                            <label for="Millas">Miles:</label><br>
                            <input type="number" step="0.001" id="Miles" name="Miles" placeholder="Miles" value="<%=data1.Miles;%>" required><br><br>
                            <label for="Galones">Gallons:</label><br>
                            <input type="number" step="0.001"id="Gallons" name="Gallons" placeholder="Gallons" value="<%=data1.Gallons;%>" required><br><br>
                            <label for="Costo">Amount:</label><br>
                            <input type="number" step="0.001" id="Amount" name="Amount" placeholder="Amount" value="<%=data1.Amount;%>" required><br><br>



                        <button type="submit" class="btn btn-primary">
                            Actualizar datos
                        </button> <a href="/ver">Regresar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>


